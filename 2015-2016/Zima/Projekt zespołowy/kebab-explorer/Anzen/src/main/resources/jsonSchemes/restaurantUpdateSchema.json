{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Restaurant Update Schema",
  "type": "object",
  "properties": {
    "address": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string",
          "pattern": "Wroc≈Çaw"
        },
        "postcode": {
          "type": "string",
          "pattern": "[0-9]{2}-[0-9]{3}"
        },
        "street": {
          "type": "string"
        }
      },
      "required": [
        "city",
        "postcode",
        "street"
      ]
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "fullname": {
      "type": "string"
    },
    "phone": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "[0-9]{3} [0-9]{3} [0-9]{3}"
      }
    },
    "location": {
      "type": "object"
    }
  }
}