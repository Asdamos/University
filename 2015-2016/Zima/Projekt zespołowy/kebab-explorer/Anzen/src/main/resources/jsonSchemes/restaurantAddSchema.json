{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Restaurant Add Schema",
  "type": "object",
  "properties": {
    "address": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string",
          "pattern": "Wroc≈Çaw"
        },
        "postcode": {
          "type": "string",
          "pattern": "[0-9]{2}-[0-9]{3}"
        },
        "street": {
          "type": "string"
        }
      },
      "required": [
        "city",
        "postcode",
        "street"
      ]
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "location": {
      "type": "object"
    },
    "menu": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dishName": {
            "type": "string"
          },
          "dishPrice": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "dishName",
          "dishPrice"
        ]
      }
    },
    "fullname": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "phone": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "[0-9]{3} [0-9]{3} [0-9]{3}"
      }
    }
  },
  "required": [
    "address",
    "location",
    "name"
  ]
}